@model WebGUI.App_Data.Contact

<div class="w3-container w3-margin-top">
    <h2 class="h2 w3-wide text-center" title="Message subject">@Model.Subject</h2>

    <div class="container form-group">
        @Model.Massage
    </div>

    <div class="container form-group">
        <p class="p-2">Best Regardes,</p>
        <h4 class="h4" title="Click to see all the messages from @Model.Name"  style="cursor:pointer"
            onclick="document.location ='@Url.Action("Index", "Messages", new { @Search = Model.Email })';">
            @Model.Name
        </h4>
        <h5 class="h5">@Model.Email</h5>
        <h6 class="h6">@Model.Phone</h6>
    </div>
</div>

<br />
