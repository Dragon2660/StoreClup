@model WebGUI.Models.AppUser

<li class="child">
    <strong>Your Email</strong><br>
    <p>@Model.Email</p>
    <button onclick="document.getElementById('EmailData').style.display='block'">Edit</button>
</li>

<li class="child">
    <strong>Your Password</strong><br>
    <p>**********</p>
    <button>@Html.ActionLink("Edit", "ChangPassword", "Account", null, null)</button>
</li>

<li class="child">
    <strong>Your Address</strong><br>
    <p>@Model.Address</p>
    <button onclick="document.getElementById('AddressData').style.display='block'">Edit</button>
</li>

<li class="child">
    <strong>Paypal account</strong><br>
    @if (string.IsNullOrEmpty(Model.Billing))
    {
        <p> <i class="fa fa-money"></i> No payment method on file</p>
    }
    else
    {
        <p>@Model.Billing</p>
    }
    <button onclick="document.getElementById('BillingData').style.display='block'">Edit</button>
</li>

<li class="child">
    <strong>Mobile Number</strong><br>
    @if (string.IsNullOrEmpty(Model.PhoneNumber))
    {
        <p><a href="#">Learn more </a>about DSC SMS.</p>
    }
    else
    {
        <p>@Model.PhoneNumber</p>

    }
    <button onclick="document.getElementById('Phone').style.display='block'">Edit</button>
</li>
