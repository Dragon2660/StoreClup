@model WebGUI.Models.ForgetPassword

<section class="join">
    <div class="container">
        <h2 class="head-join">1. CLUB PROFILE </h2>
        <div class="row">
            <div class="col-sm-12 text-center">
                <div class="top-intro">
                    <h3 class="h3">Change your password</h3>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="panel w3-content">
                        <div class="w3-container d-flex justify-content-center">
                            <div class="form-group" style="width:100%">
                                @Html.TextBoxFor(x => x.Email, new { @style = "width:60%", @type = "email", @placeholder = "Email" })<br />
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <input type="submit" value="Reset" class="btn confirme">
                    </div>
                }
            </div>
        </div>
    </div>
</section>
