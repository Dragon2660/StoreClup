@model List<WebGUI.App_Data.Image>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            string cssclass = " ";
            if (item.ImageId == 1)
            {
                cssclass = "active";
            }
            <div class="carousel-item @cssclass" style="height: 450px;">
                <img class="d-block w-100" src="@item.ImageURL" alt="@item.Title">
                <div class="carousel-caption ml-auto">
                    <h3>@item.Title</h3>
                    <p>@item.Description</p>
                    @Html.ActionLink("get Start", "GetStart", "Product", new { area = "" }, new { @class = "getstart-btn btn btn-lg btn-primary" })
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
